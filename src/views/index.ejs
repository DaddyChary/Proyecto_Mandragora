<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Invernadero Digital</title>
        <link rel="stylesheet" href="img/invernadero.jpg">
        <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f8f0;
        }
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
        }
        .nav-links a {
            color: white;
            text-decoration: none;
            margin: 0 10px;
        }
        .main-content {
            display: flex;
            padding: 20px;
        }
        .left-section, .right-section {
            flex: 1;
            margin: 10px;
        }
        .left-section img {
            max-width: 100%;
            border-radius: 10px;
        }
        .right-section h2 {
            color: #4CAF50;
        }
        .info-section {
            background-color: #e8f5e9;
            padding: 20px;
            margin: 20px;
            border-radius: 10px;
            text-align: center;
        }
        .sensors {
            display: flex;
            justify-content: space-around;
            margin: 20px 0;
        }
        .sensor-card {
            background-color: #ffffff;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 10px;
            text-align: center;
            width: 30%;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
        footer {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 10px 20px;
            margin-top: 20px;
        }
        </style>
    </head>
    <body>
        <!-- Barra de navegación -->
        <nav class="navbar">
            <div class="logo">Invernadero Digital</div>
            <div class="nav-links">
                <a href="/">Plantas</a>
                <a href="./calendario">Calendario</a>
            </div>
        </nav>

        <!-- Contenido principal -->
        <div class="main-content">
            <div class="left-section">
                <img src="img/planta.jpg" alt="Imagen de un invernadero"
                    class="greenhouse-image">
            </div>
            <div class="right-section">
                <h2>Plantas en el invernadero</h2>
                <ul>
                    <li>Acelga</li>
                    <li>Lechuga</li>
                    <li>Brócoli</li>
                    <li>Tomates</li>
                </ul>
            </div>
        </div>

        <!-- Sección de datos relevantes -->
        <div class="info-section">
            <h3>Clima del invernadero</h3>
            <p>Controla las condiciones ideales para tus plantas.</p>
        </div>

        <!-- Sensores -->
        <div class="sensors">
            <div class="sensor-card">
                <h4>Humedad</h4>
                <p id="humedad">Cargando...</p>
            </div>
            <div class="sensor-card">
                <h4>Temperatura</h4>
                <p id="temperatura">Cargando...</p>
            </div>
            <div class="sensor-card">
                <h4>Estado del riego</h4>
                <p id="riego">Cargando...</p>
            </div>
        </div>

        <!-- Footer -->
        <footer>
            <p>&copy; 2024 Invernadero Digital. Todos los derechos reservados.
                Realizado por Luis Tobar Gonzalez & Gamaliel Moya Vasquéz</p>
        </footer>

        <script>
            // Función para actualizar los datos de los sensores
            function updateSensorData() {
                fetch('/p')  // Cambia aquí si tu ruta es diferente
                    .then(response => response.json())
                    .then(data => {
                        // Actualiza los valores en la página con 2 decimales
                        document.getElementById('humedad').textContent = `${parseFloat(data.humedad).toFixed(2)}%`;
                        document.getElementById('temperatura').textContent = `${parseFloat(data.temperatura).toFixed(2)}°C`;
                        document.getElementById('riego').textContent = data.humedad < 40 ? 'Activo' : 'Inactivo';
                    })
                    .catch(error => console.error('Error al obtener los datos:', error));
            }


            // Llama a la función al cargar la página
            updateSensorData();

            // Actualiza los datos cada 5 segundos
            setInterval(updateSensorData, 5000);
        </script>
    </body>
</html>
