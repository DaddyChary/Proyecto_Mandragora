<!DOCTYPE html>
<html lang="es">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Calendario de Invernadero</title>
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet">
        <style>
        /* Personalización de la barra de navegación */
        .navbar {
            background-color: #4CAF50;
            color: white;
            padding: 15px;
        }
        
        .navbar .logo {
            font-weight: bold;
            font-size: 1.5em;
        }
        
        .navbar .nav-links a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            font-size: 1.1em;
        }

        .navbar .nav-links a:hover {
            text-decoration: underline;
        }

        /* Estilos de la tabla */
        table th, table td {
            vertical-align: middle;
        }

        table th {
            background-color: #4CAF50;
            color: white;
        }

        .table-responsive {
            margin-top: 20px;
        }

        /* Botones de acción */
        .btn {
            font-size: 0.9em;
            padding: 8px 12px;
        }

        .btn-warning {
            background-color: #f39c12;
            border: none;
        }

        .btn-warning:hover {
            background-color: #e67e22;
        }

        .btn-danger {
            background-color: #e74c3c;
            border: none;
        }

        .btn-danger:hover {
            background-color: #c0392b;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        /* Diseño de la página */
        .container {
            margin-top: 30px;
        }

        .text-center {
            text-align: center;
        }

        footer {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: 30px;
        }
    </style>
    </head>

    <body>
        <!-- Barra de navegación -->
        <nav class="navbar">
            <div class="logo">Invernadero Digital</div>
            <div class="nav-links">
                <a href="/">Plantas</a>
                <a href="./calendario">Calendario</a>
            </div>
        </nav>

        <div class="container my-5">
            <h1 class="text-center mb-4">Calendario de Invernadero</h1>

            <!-- Tabla de datos -->
            <div class="table-responsive">
                <table class="table table-bordered text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>Fecha</th>
                            <th>Humedad (%)</th>
                            <th>Temperatura (°C)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% calendario.forEach(item => { %>
                        <!-- Recorrer los datos de la base de datos -->
                        <tr>
                            <td><%= item.fecha_hora.toISOString().split('T')[0]
                                %></td> <!-- Formatear la fecha -->
                            <td><%= item.humedad %></td>
                            <td><%= item.temperatura %></td>
                            <td>
                                <button
                                    class="btn btn-warning btn-sm">Editar</button>
                                <button
                                    class="btn btn-danger btn-sm">Eliminar</button>
                            </td>
                        </tr>
                        <% }); %> <!-- Fin del bucle -->
                    </tbody>
                </table>
            </div>

            <!-- Botón para añadir nueva entrada -->
            <div class="text-center mt-4">
                <button class="btn btn-success">Añadir nueva entrada</button>
            </div>
        </div>

        <!-- Footer -->
        <footer>
            <p>&copy; 2024 Invernadero Digital. Todos los derechos
                reservados.</p>
        </footer>

        <!-- Bootstrap JS -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>
